{
  "name": "@jwrunge/tinystore",
  "version": "1.0.0",
  "main": "src/tinystore.min.js",
  "module": "src/tinystore.min.js",
  "type": "module",
  "scripts": {
    "dev": "bun run ./src/index.ts",
    "dev-wsl": "bun run ./src/index.ts --wsl",
    "build-ts": "tsc src/store.ts src/hash.ts --outfile dist/tinystore.js --target esnext --module amd",
    "minify": "terser dist/tinystore.js --compress --output dist/tinystore.min.js",
    "build": "run-s build-ts minify"
  },
  "devDependencies": {
    "bun-types": "latest",
    "npm-run-all": "^4.1.5",
    "terser": "^5.24.0",
    "typescript": "^5.0.0"
  }
}
